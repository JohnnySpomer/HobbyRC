<h2>We found <%= @product_names.size %> Products by thier name</h2>

<% if !@product_names.empty? %>
    <ul>
        <% @product_names.each do |prod| %>
            <li><%= link_to prod.name, prod %></li>
            <ul>
                <li><%= prod.description %></li>
            </ul>

        <% end %>
    </ul>
<% end %>

<h2>We found <%= @product_descriptions.size %> Products by their description</h2>

<% if !@product_descriptions.empty? %>
    <ul>
        <% @product_descriptions.each do |prod| %>
            <li><%= link_to prod.name, prod %></li>
            <ul>
                <li><%= prod.description %></li>
            </ul>

        <% end %>
    </ul>
<% end %>